<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fracmento.Fracment_principal_bienestar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/DMtiutloBienestarPrincipal"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="@dimen/padding"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margintop"
                    android:layout_weight="1"
                    android:text="@string/TituloBienestarprincipal" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margintoplinearBtns1">


                    <ImageButton
                        android:id="@+id/btnArt_Cre_cultu"
                        android:layout_width="@dimen/layout_width_Art"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="1dp"
                        android:scaleType="centerCrop"
                        android:background="#fff"
                        android:src="@drawable/cultura" />

                    <ImageButton
                        android:id="@+id/btnDeporte_disc"
                        android:layout_width="@dimen/layout_width_Dep"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="centerCrop"
                        android:background="#fff"
                        android:src="@drawable/deporte" />

                </LinearLayout>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:layout_marginTop="40dp"
                android:orientation="horizontal"
               android:elevation="@dimen/elevacion">

                <ImageButton
                    android:id="@+id/btnExitoAcademico"
                    android:layout_width="@dimen/layout_width_Art"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/botones" />
                <ImageButton
                    android:id="@+id/btnProfe_diversidad"
                    android:layout_width="@dimen/layout_width_Dep"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/botones" />
            </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>